<section>
    <div class="container">
        <div class="row">
            <a href="/admin/add-product" class="btn btn-success w-auto ms-auto mt-2">Add Product</a>
        </div>
        <table class="table mt-3">
  <thead>
    <tr>
      <th scope="col">name</th>
      <th scope="col">Category</th>
      <th scope="col">Description</th>
      <th scope="col">image</th>
    </tr>
  </thead>
  <tbody>
    {{#each products}}
    <tr>
      <th scope="row">{{this.Name}}</th>
      <td>{{this.Category}}</td>
      <td>{{this.Description}}</td>
      <td><img style="width: 50px; height:50px" src="/product-images/{{this._id}}.jpg" alt=""></td>
      <td>
        <a href="/admin/edit-product/{{this._id}}" class="btn btn-primary">Edit</a>
        <a href="/admin/delete-product/{{this._id}}" class="btn btn-danger" onclick="return confirm('Do you want to delete {{this.Name}}')">Delete</a>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>
    </div>
</section>